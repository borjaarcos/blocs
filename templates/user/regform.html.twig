{% extends 'base.html.twig' %}
{% form_theme form _self %}

{% block content %}
    <div class="col-lg-4 box-form">
        <h2>Sign up, please</h2>
        {{ form_start(form)}}
        {{form_widget(form) }}
           {{form_end(form) }}           
       {{form_errors(form)}}        
    </div>
{% endblock %}

{% block form_errors %}
{% if errors|length >0 %}
    <ul>
        {% for error in errors %}
        <li class="error-message">{{error.message}}</li>
        {% endfor %}
        </ul>
{%endif%}    
{% endblock form_errors %}
{% block javascripts %}
	{{parent()}}
	<script src="{{asset("js/custom/username-test.js")}}"></script>
{% endblock %}



